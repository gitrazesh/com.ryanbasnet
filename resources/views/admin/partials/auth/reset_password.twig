{% extends 'front/layout.twig' %}
{% block main %}
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default login-container">
                    
                    <div class="panel-body">
                        <div class="panel-heading"><h3  class="text-center">Password Recovery</h3></div>
                      
                          <p>Please enter new password.</p>
                        
                        {% if errors is not empty %}
                            <div class="alert alert-danger">
                                {% for error in errors %}  
                                    <p class="text-danger">{{ error | first }}</p>
                                {% endfor %}
                            </div>
                        {% endif %}
                        
                        <form method="post"  action="/account/reset-password/{{resetToken}}" >
                           <!-- email -->
                            <div class="form-group">
                                <label>New password :</label>
                                <input type="password" class="form-control input-lg" id=",,email" name="new-password" placeholder="new password" >
                            </div>

                            <div class="form-group">
                                <label>Confirm password :</label>
                                <input type="password" class="form-control input-lg" id="email" name="confirm-password" placeholder="confirm password" >
                            </div>

                            <button class="btn btn-success btn-lg btn-reset">Reset password</button>
                            {{ csrf.field | raw }}
                        </form>
                        <br>
                            <div>
                        <span class="pull-left"><a href="{{ path_for('admin.forgotPassword')}}" class ="pull-right">Request Reset Email</a></span><span class="pull-right"><a href="{{ path_for('admin.signin')}}" class ="pull-right">Login</a></span>
                        </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
             </div>
             <!-- /.col-sm-4 -->
        </div>
    </div>
    <!-- /.row -->
   {% endblock main %}
