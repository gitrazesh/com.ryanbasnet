{% extends 'front/layout.twig' %}
{% block main %}
    <section>
        <div class="row">
            <div class="col-md-4 col-md-offset-4 login-container">
                <div class="panel panel-default login-panel">
                   
                    <div class="panel-body">
                         <div class="panel-heading"><h3  class="text-center">Login</h3></div>
                        {% if errors is not empty %}
                            <div class="alert alert-danger">
                                {% for error in errors %}  
                                    <p class="text-danger">{{ error | first }}</p>
                                {% endfor %}
                            </div>
                        {% endif %}

                        <form method="post"  action="/auth/login" >
                           <!-- email -->
                            <div class="form-group">
                                <label for="title">Email:</label>
                                <input type="email" class="form-control input-lg" id="email" name="email" value="{{oldInput.email}}" placeholder="email">
                            </div>
                            <!-- password -->
                            <div class="form-group">
                                <label for="pwd">Password:</label>
                                <input type="password" class="form-control input-lg" id="password" name="password" placeholder="password">
                            </div>

                            <button class="btn btn-success btn-lg btn-login" >Log in </button>
                            {{ csrf.field | raw }}
                        </form>
                        <br>
                        <a href="{{ path_for('admin.forgotPassword')}}" class ="pull-right">Forgot Password</a>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
             </div>
             <!-- /.col-sm-4 -->
        </div>
        <!-- /.row -->
    
    <!-- jQuery -->
    <script src="/admin/js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="/admin/js/bootstrap.min.js"></script>
    <!-- SNC JavaScript -->
    <script src="/admin/js/scripts.js"></script>

{% endblock main %}

